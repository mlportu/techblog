 <article class="post">
      <div class="title">
        <a href="/post/{{post.id}}" target="_blank">{{post.title}}</a>
        <span>{{post.post_content}}</span>
      </div>
      <div class="meta">
        posted by {{post.user.username}} on
        {{post.created_at}}
        |
        <a href="/post/{{postid}}">{{post.comments.length}} comment(s)</a>
      </div>
    </article>