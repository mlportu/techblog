 <article class="post">
      <div class="title">
        <a href="/post/{{id}}" target="_blank">{{title}}</a>
        <span>{{post_content}}</span>
      </div>
      <div class="meta">
        posted by {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
</article>